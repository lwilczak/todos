<h1>Listing todos</h1>

<table>
  <tr>
    <th><%= link_to 'Subject', :controller => "todos", :action => "index", :field => "subject" %></th>
    <th><%= link_to 'Priority', :controller => "todos", :action => "index", :field => "priority" %></th>
    <th><%= link_to 'Date', todos_path %></th>
    <!--<th>Content</th>-->
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.subject %></td>
    <td><%= todo.priority.name %></td>
    <!--<td><%= todo.content %></td>-->
    <td><%= todo.created_at.strftime("%F %R") %></td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

